{
  "name": "@zitadel/docs",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm build",
        "cwd": "docs"
      },
      "outputs": [
        "{projectRoot}/.next"
      ],
      "dependsOn": [
        "^build",
        "check-links"
      ],
      "inputs": [
        "default",
        "^production"
      ]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next dev",
        "cwd": "docs"
      },
      "dependsOn": [
        "generate"
      ]
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next start",
        "cwd": "docs"
      },
      "dependsOn": [
        "build"
      ]
    },
    "fetch-docs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm fetch-docs",
        "cwd": "docs"
      },
      "outputs": [
        "{projectRoot}/content/v*",
        "{projectRoot}/content/versions.json",
        "{projectRoot}/public/v*"
      ],
      "cache": true,
      "inputs": [
        "default",
        {
          "runtime": "git ls-remote --tags https://github.com/zitadel/zitadel.git | grep -v '\\^{}' | head -n 20"
        }
      ]
    },
    "generate-buf": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm generate:buf",
        "cwd": "docs"
      },
      "dependsOn": [
        "fetch-docs"
      ],
      "outputs": [
        "{projectRoot}/openapi"
      ],
      "cache": true,
      "inputs": [
        "default",
        {
          "dependentTasksOutputFiles": "docs/content/versions.json"
        }
      ]
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm clean",
        "cwd": "docs"
      }
    },
    "generate-openapi": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm generate:openapi",
        "cwd": "docs"
      },
      "outputs": [
        "{projectRoot}/content/reference/api",
        "{projectRoot}/content/v*/reference/api"
      ],
      "dependsOn": [
        "generate-buf"
      ],
      "cache": true,
      "inputs": [
        "default",
        {
          "dependentTasksOutputFiles": "docs/openapi/**"
        }
      ]
    },
    "generate-virtual": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm generate:virtual",
        "cwd": "docs"
      },
      "outputs": [
        "{projectRoot}/content/**/index.mdx"
      ],
      "cache": true,
      "inputs": [
        "default"
      ]
    },
    "generate-source": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec fumadocs-mdx",
        "cwd": "docs"
      },
      "outputs": [
        "{projectRoot}/.source"
      ],
      "dependsOn": [
        "generate-openapi",
        "generate-virtual"
      ],
      "cache": true,
      "inputs": [
        "default",
        {
          "dependentTasksOutputFiles": "docs/content/**"
        }
      ]
    },
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Generation complete'",
        "cwd": "docs"
      },
      "dependsOn": [
        "generate-source"
      ]
    },
    "check-links": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm check-links",
        "cwd": "docs"
      },
      "dependsOn": [
        "generate"
      ],
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/proto/**/*",
        "{projectRoot}/content/**/*",
        "{projectRoot}/public/**/*"
      ]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint .",
        "cwd": "docs"
      }
    }
  }
}