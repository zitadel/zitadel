{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "generate": {
      "outputs": [
        "src/proto/**"
      ],
      "cache": true
    },
    "build": {
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "dependsOn": [
        "lint",
        "generate",
        "^build"
      ]
    },
    "test": {
      "dependsOn": [
        "generate"
      ]
    },
    "test:watch": {
      "dependsOn": [
        "generate"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "ZITADEL_API_URL",
    "ZITADEL_SERVICE_USER_TOKEN",
    "ZITADEL_SYSTEM_API_URL",
    "ZITADEL_SYSTEM_API_USERID",
    "ZITADEL_SYSTEM_API_KEY",
    "ZITADEL_ISSUER",
    "ZITADEL_ADMIN_TOKEN"
  ]
}