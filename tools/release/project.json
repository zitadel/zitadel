{
    "name": "@zitadel/release",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "tools/release",
    "targets": {
        "version": {
            "executor": "nx:run-commands",
            "cache": true,
            "inputs": [
                "default"
            ],
            "outputs": [
                "{workspaceRoot}/.artifacts/version"
            ],
            "options": {
                "commands": [
                    "npx ts-node tools/release/main.ts version"
                ],
                "passArgs": true
            }
        },
        "release": {
            "executor": "nx:run-commands",
            "cache": false,
            "inputs": [
                "default",
                "^production"
            ],
            "outputs": [
                "{workspaceRoot}/.artifacts"
            ],
            "options": {
                "commands": [
                    "npx ts-node tools/release/main.ts release"
                ],
                "passArgs": true
            },
            "dependsOn": [
                "version",
                {
                    "projects": "zitadel",
                    "target": "pack"
                }
            ]
        }
    }
}