{
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "targets": {
    "nx-release-publish": {
      "description": "Uploads checksums for all released artifacts to the GitHub release and configures the org scope for GitHub Packages.",
      "dependsOn": [
        "@zitadel/api:nx-release-publish",
        "@zitadel/login:nx-release-publish"
      ],
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "rm -f /.artifacts/pack/checksums.txt",
          "sha256sum /.artifacts/pack/* > /.artifacts/pack/checksums.txt",
          "bash -c \"[[ \\\"${NX_DRY_RUN}\\\" != \\\"true\\\" ]] && gh release upload ${ZITADEL_RELEASE_VERSION} /.artifacts/pack/checksums.txt\"",
          "bash -c \"echo @${ZITADEL_RELEASE_GITHUB_ORG}:registry=https://npm.pkg.github.com\" >> ~/.npmrc"
        ]
      }
    },
    "db": {
      "continuous": true,
      "description": "Runs a local Postgres database for development",
      "command": "nx run @zitadel/devcontainer:compose up db"
    },
    "clean": {
      "description": "Cleans all local-only files relating to the Zitadel platform (API, Login and Console)",
      "dependsOn": [
        "@zitadel/api:clean",
        "@zitadel/login:clean",
        "@zitadel/console:clean"
      ]
    },
    "local-npm-registry": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "port": 4873,
        "config": ".verdaccio/config.yml",
        "storage": ".artifacts/local-npm-registry/storage"
      }
    }
  }
}
