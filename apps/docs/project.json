{
  "name": "@zitadel/docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm build",
        "cwd": "apps/docs"
      },
      "outputs": [
        "{projectRoot}/.next"
      ],
      "dependsOn": [
        "^build",
        "check-links"
      ],
      "inputs": [
        "default",
        "^production"
      ],
      "cache": true
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next dev",
        "cwd": "apps/docs"
      },
      "dependsOn": [
        "generate-all"
      ]
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next start",
        "cwd": "apps/docs"
      },
      "dependsOn": [
        "build"
      ]
    },
    "fetch-remote": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm fetch:remote",
        "cwd": "apps/docs"
      },
      "outputs": [
        "{projectRoot}/content/v*",
        "{projectRoot}/content/versions.json",
        "{projectRoot}/public/v*"
      ],
      "cache": true,
      "inputs": [
        "default",
        {
          "runtime": "git ls-remote --tags --sort=-v:refname https://github.com/zitadel/zitadel.git | grep 'refs/tags/v[0-9]' | grep -v '\\^{}' | head -n 5"
        }
      ]
    },
    "generate-grpc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm generate:grpc",
        "cwd": "apps/docs"
      },
      "dependsOn": [
        "fetch-remote"
      ],
      "outputs": [
        "{projectRoot}/openapi"
      ],
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/proto/**/*",
        {
          "dependentTasksOutputFiles": "apps/docs/content/versions.json"
        }
      ]
    },
    "generate-api": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm generate:api",
        "cwd": "apps/docs"
      },
      "outputs": [
        "{projectRoot}/content/reference/api",
        "{projectRoot}/content/v*/reference/api"
      ],
      "dependsOn": [
        "generate-grpc"
      ],
      "cache": true,
      "inputs": [
        "{projectRoot}/scripts/generate-docs.mts",
        {
          "dependentTasksOutputFiles": "apps/docs/openapi/**"
        }
      ]
    },
    "fix-links": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm fix:links",
        "cwd": "apps/docs"
      },
      "dependsOn": [
        "generate-api"
      ],
      "cache": false,
      "inputs": [
        "default",
        {
          "dependentTasksOutputFiles": "apps/docs/content/reference/api/**"
        }
      ]
    },
    "generate-indices": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm generate:indices",
        "cwd": "apps/docs"
      },
      "outputs": [
        "{projectRoot}/content/**/index.mdx"
      ],
      "dependsOn": [
        "fetch-remote"
      ],
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/content/versions.json"
      ]
    },
    "generate-source": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec fumadocs-mdx",
        "cwd": "apps/docs"
      },
      "outputs": [
        "{projectRoot}/.source"
      ],
      "dependsOn": [
        "fix-links",
        "generate-indices"
      ],
      "cache": true,
      "inputs": [
        "default",
        {
          "dependentTasksOutputFiles": "apps/docs/content/**"
        }
      ]
    },
    "generate-all": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Generation complete'",
        "cwd": "apps/docs"
      },
      "dependsOn": [
        "generate-source"
      ]
    },
    "check-links": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm check:links",
        "cwd": "apps/docs"
      },
      "dependsOn": [
        "generate-all"
      ],
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/proto/**/*",
        "{projectRoot}/content/**/*",
        "{projectRoot}/public/**/*"
      ]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint .",
        "cwd": "apps/docs"
      },
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json"
      ]
    }
  }
}