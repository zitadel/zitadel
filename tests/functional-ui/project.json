{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "test-pull": {
        "command": "nx run @zitadel/devcontainer:compose pull db-functional-ui"
    },
    "test-state": {
        "dependsOn": [
            "test-pull"
        ],
        "continuous": true,
        "command": "nx run @zitadel/devcontainer:compose up --force-recreate --renew-anon-volumes db-functional-ui"
    },
    "test-setup": {
        "dependsOn": [
            "test-state",
            "test-build"
        ],
        "command": "nx run @zitadel/api:setup",
        "options": {
            "env": {
                "API_CONFIG_FILE": "{projectRoot}/api.yaml"
            }
        }  
    },
    "test-env": {
        "continuous": true,
        "dependsOn": [
            "test-state",
            "test-setup"
        ],
        "options": {
            "env": {
                "API_CONFIG_FILE": "{projectRoot}/api.yaml"
            }
        },
        "command": "nx run @zitadel/api:prod --excludeTaskDependencies"
    },
    "test": {
      "description": "Runs the functional UI tests against a Zitadel API. It sequentially runs agains Chrome and Firefox so the tests don't intefere with each other.",
      "dependsOn": [
        "test-state",
        "test-env"
      ],
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "cwd": "{projectRoot}",
        "commands": [
          "pnpm cypress run --browser chrome --reporter-options reportDir=cypress/results/chrome --config videosFolder=cypress/videos/chrome,screenshotsFolder=cypress/screenshots/chrome",
          "pnpm cypress run --browser firefox --reporter-options reportDir=cypress/results/firefox --config videosFolder=cypress/videos/firefox,screenshotsFolder=cypress/screenshots/firefox"
        ]
      },
      "cache": true,
      "inputs": [
        "default"
      ]
    }
  }
}
